@{
    ViewData["Title"] = "Employees";
}

<table cellpadding="5" >
    <thead>
        <tr>
            <td>Name</td><td>Email</td><td>Contact.No</td><td>Action</td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var e in ViewBag.Employees)
            {
                <tr>
                    <td>@e.FirstName @e.LastName</td>
                    <td>@e.email</td>
                    <td>@e.contactNo</td>
                </tr>
            }
        }
    </tbody>
</table>
<hr />
<form action="/Home/delete" method="post">
    <label for="delete" >Enter a Name</label><input type="text" id="delete" name="delete" />
    <button type="submit" id="btn" name="btn" >DELETE</button>
</form>
<form action="/Home/update" method="post">
    <hr />
    <label for="update">Enter a Name</label><input type="text" name="update" id="update" />
    <button type="button" name="btn" id="btn" >UPDATE</button>
</form>

