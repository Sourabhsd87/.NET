@model MovieMania.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h3>Enter Producer name</h3>
        <form asp-action="Sorting">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="producer" class="control-label"></label>
                <input asp-for="producer" class="form-control" />
                <span asp-validation-for="producer" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Sort" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
